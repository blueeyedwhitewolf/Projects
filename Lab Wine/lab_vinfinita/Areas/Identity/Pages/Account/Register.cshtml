@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar um novo utilizador";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["pendente"] != null)
{
    <p style="color:#e01212;margin-left: -15.266666666666664%;">@TempData["pendente"] </p>

}

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="application/x-www-form-urlencoded">
            <h4>Introduza os seus dados</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.TipoUtilizador"></label>
                <select asp-for="Input.TipoUtilizador">
                    <option value="Cliente">Cliente</option>
                    <option value="Garrafeira">Garrafeira</option>
                </select>
                <span asp-validation-for="Input.TipoUtilizador" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-default">Registar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
