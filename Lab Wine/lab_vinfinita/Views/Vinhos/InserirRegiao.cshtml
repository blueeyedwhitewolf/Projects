@model lab_vinfinita.Models.Regiao

@{
    ViewData["Title"] = "Inserir Regiao de Vinhos";
}

<h2>Inserir Regiao de Vinhos</h2>

<h4>Regiao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InserirRegiao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeRegiao" class="control-label"></label>
                <input asp-for="NomeRegiao" class="form-control" />
                <span asp-validation-for="NomeRegiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Regiao" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListagemRegioes">Listagem de regiões</a>
</div>

