@model lab_vinfinita.Models.Vinho

@{
    ViewData["Title"] = "Alterar Stock";
}

<h2>Alterar Stock</h2>

<h4>Vinho</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AtualizarStock">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdVinho" />
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar Stock do vinho" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListagemGarrafeira">Back to List</a>
</div>

